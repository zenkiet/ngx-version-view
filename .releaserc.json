{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "parserOpts": {
          "headerPattern": "^(\\w*)\\((.*?)\\):\\s*(.*)$",
          "headerCorrespondence": ["type", "scope", "subject"],
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "init", "release": "minor" },
          { "type": "docs", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "build", "release": "patch" }
        ],
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        },
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "perf", "section": "‚ö°Ô∏è Performance Improvements" },
            { "type": "revert", "section": "‚Ü©Ô∏è Reverts" },
            { "type": "docs", "section": "üìù Documentation" },
            { "type": "style", "section": "üíÑ Styles" },
            { "type": "refactor", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "test", "section": "‚úÖ Tests" },
            { "type": "build", "section": "üë∑ Build System" },
            { "type": "ci", "section": "üîß Continuous Integration" },
            { "type": "init", "section": "üéâ Initial Release" }
          ]
        }
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll the important changes of the project will be recorded here."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "pkgRoot": "dist/ngx-version-view",
        "tarballDir": "dist",
        "assets": ["package.json", "README.md", "CHANGELOG.md", "LICENSE"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "docs/CHANGELOG.md",
          "README.md",
          "projects/ngx-version-view/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.tgz",
            "label": "NPM tarball"
          },
          {
            "path": "dist/ngx-version-view/**/*",
            "label": "Distribution files"
          }
        ],
        "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version}",
        "failComment": "‚ùå The release failed with the following error: ${error.message}"
      }
    ]
  ]
}
